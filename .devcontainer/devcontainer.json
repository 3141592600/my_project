{
  "name": "Spring Boot + Vue + MySQL Dev",
  "dockerComposeFile": ["./docker-compose.yml"],
  "service": "backend",
  "workspaceFolder": "/workspaces/my_project",
  "forwardPorts": [8080, 5173, 3306],
  "postCreateCommand": "chmod +x .devcontainer/scripts/init.sh && .devcontainer/scripts/init.sh",
  "customizations": {
    "vscode": {
      "extensions": [
        "vscjava.vscode-java-pack",
        "ms-azuretools.vscode-docker",
        "esbenp.prettier-vscode",
        "Vue.volar"
      ]
    }
  }
}
